---
// Hero.astro - A hero section component with diagonal split design
const headline =
  "Especialistas em otimizar operações e maximizar lucros através do ERP Sankhya.";

const ctaButton = {
  text: "Saiba Mais",
  url: "#Contato",
};
---

<section id="Hero" class="hero-container">
  <div class="hero-content">
    <div class="hero-text font-normal space-y-8">
      <h1 class="text-5xl max-w-xl text-white pt-32 leading-16 text-pretty">
        {headline}
      </h1>
      <a href={ctaButton.url} class="cta-button bg-laranja">{ctaButton.text}</a>
    </div>
  </div>
</section>

<style>
  .hero-container {
    position: relative;
    height: 800px;
    width: 100%;
    overflow: hidden;
    background-image: url("/images/hero.png");
    background-size: cover;
    background-position: right top;
    background-repeat: no-repeat;
  }

  .hero-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 70%;
    height: 100%;
    background-color: #0637ae; /* azul */
    clip-path: polygon(0 0, 85% 0%, 45% 106%, 0 50%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    height: 100%;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    z-index: 2;
    display: flex;
    align-items: start;
  }

  .cta-button {
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #d69915;
  }

  @media (max-width: 768px) {
    .hero-container::before {
      width: 100%;
      clip-path: polygon(0 0, 80% 0%, 40% 100%, 0 72%);
    }

    .hero-text {
      width: 100%;
      padding: 2rem 1rem;
    }

    .hero-text h1 {
      font-size: 2rem;
    }
  }
</style>
