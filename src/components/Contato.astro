<section id="Contato">
  <form class="grid grid-cols-1 gap-y-6">
    <div>
      <label
        for="full-name"
        class="block text-sm font-medium text-secondary-700">Full Name</label
      >
      <div class="mt-1">
        <input
          type="text"
          name="full-name"
          id="full-name"
          autocomplete="name"
          class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md"
          placeholder="John Doe"
        />
      </div>
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-secondary-700"
        >Email</label
      >
      <div class="mt-1">
        <input
          id="email"
          name="email"
          type="email"
          autocomplete="email"
          class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md"
          placeholder="john.doe@example.com"
        />
      </div>
    </div>

    <div>
      <label for="company" class="block text-sm font-medium text-secondary-700"
        >Company</label
      >
      <div class="mt-1">
        <input
          type="text"
          name="company"
          id="company"
          autocomplete="organization"
          class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md"
          placeholder="Your Company"
        />
      </div>
    </div>

    <div>
      <label for="phone" class="block text-sm font-medium text-secondary-700"
        >Phone</label
      >
      <div class="mt-1">
        <input
          type="text"
          name="phone"
          id="phone"
          autocomplete="tel"
          class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md"
          placeholder="+1 (555) 987-6543"
        />
      </div>
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-secondary-700"
        >Message</label
      >
      <div class="mt-1">
        <textarea
          id="message"
          name="message"
          rows="4"
          class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md"
          placeholder="Tell us about your project and how we can help..."
        ></textarea>
      </div>
    </div>

    <div>
      <button
        type="submit"
        class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
      >
        Submit
      </button>
    </div>
  </form>
</section>
