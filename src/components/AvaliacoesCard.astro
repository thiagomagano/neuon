---
export interface Props {
  quote: string;
  name: string;
  title: string;
  imageSrc?: string;
}

const { quote, name, title, imageSrc } = Astro.props;
---

<div
  class="bg-[#063099] text-white shadow-sm border-t-4 border-azul-escuro p-6 max-w-3xl mx-auto">
  <div class="flex items-center flex-wrap justify-center gap-4">
    <div class="flex-shrink-0 px-4">
      <img class="h-34 w-34 rounded-full" src={imageSrc} alt={name} />
    </div>
    <div class="ml-6 flex-1 min-w-[200px]">
      <h4 class="text-lg font-semibold uppercase mb-4">{name} - {title}</h4>
      <blockquote>
        <p class="text-base text-secondary-700 italic">"{quote}"</p>
      </blockquote>
    </div>
  </div>
</div>
