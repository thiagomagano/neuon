<section id="Clientes" class="w-full">
  <div class="flex flex-col md:flex-row">
    <!-- Left side - Dark blue background with statistics -->
    <div
      class="container w-full md:w-1/2 bg-azul-escuro py-32 px-8 md:px-12 flex flex-col justify-center items-center"
    >
      <h2 class="text-9xl font-extrabold text-laranja text-center">150</h2>
