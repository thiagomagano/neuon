<section id="Numeros" class="w-full bg-azul-escuro py-36">
  <div class="container mx-auto px-4">
    <div
      class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16 lg:gap-24">
      <div class="text-center">
        <h3 class="text-5xl md:text-6xl lg:text-7xl font-bold text-laranja">
          + <span id="count1">2000</span>
        </h3>
        <p class="text-white text-lg md:text-xl lg:text-2xl mt-3 max-w-xs">
          projetos concluídos,<br />impulsionando a evolução de empresas em
          diversos setores.
        </p>
      </div>

      <div class="text-center">
        <h3
          class="text-5xl md:text-6xl lg:text-7xl font-bold text-laranja text-nowrap">
          +<span id="count2">20</span> milhões
          <p
            class="text-white text-lg md:text-xl lg:text-2xl mt-3 max-w-xs font-normal">
            em faturamento<br />potencializado pelos nossos especialistas
          </p>
        </h3>
      </div>

      <div class="text-center">
        <h3 class="text-5xl md:text-6xl lg:text-7xl font-bold text-laranja">
          +<span id="count3">20</span> anos
        </h3>
        <p class="text-white text-lg md:text-xl lg:text-2xl mt-3 max-w-xs">
          de experiência em consultoria<br />e desenvolvimento e transformação
          de negócios.
        </p>
      </div>
    </div>

    <hr class="my-16 border-t border-white/30 w-full" />

    <div class="text-center">
      <h2
        class="text-white text-2xl md:text-3xl lg:text-4xl font-semibold mx-auto max-w-2xl scrolling-section">
        Estamos prontos para escrever um próximo capítulo de sucesso, o da sua
        empresa.
      </h2>
    </div>
  </div>
</section>

<script>
  import { animate, inView } from "motion";

  const count1 = document.getElementById("count1");
  const count2 = document.getElementById("count2");
  const count3 = document.getElementById("count3");

  inView("#Numeros", () => {
    animate(0, 2000, {
      duration: 2,
      ease: "circOut",
      onUpdate: (latest) => (count1.innerHTML = Math.round(latest)),
    });
    animate(0, 20, {
      duration: 2,
      ease: "circOut",
      onUpdate: (latest) => (count2.innerHTML = Math.round(latest)),
    });
    animate(0, 20, {
      duration: 2,
      ease: "circOut",
      onUpdate: (latest) => (count3.innerHTML = Math.round(latest)),
    });
  });
</script>
