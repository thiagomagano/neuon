---
const logos = [
  { id: 1, name: "Satis", logo: "/images/clientes/1.webp" },
  { id: 2, name: "Agrion", logo: "/images/clientes/2.webp" },
  { id: 3, name: "Grupo FGF", logo: "/images/clientes/3.webp" },
  { id: 4, name: "Pedreira Martins e Borges", logo: "/images/clientes/4.webp" },
  { id: 5, name: "Monteccer", logo: "/images/clientes/5.webp" },
  { id: 6, name: "Satis", logo: "/images/clientes/1.webp" },
  { id: 7, name: "Agrion", logo: "/images/clientes/2.webp" },
  { id: 8, name: "Grupo FGF", logo: "/images/clientes/3.webp" },
  { id: 9, name: "Pedreira Martins", logo: "/images/clientes/4.webp" },
  { id: 10, name: "Monteccer", logo: "/images/clientes/5.webp" },
];
---

<section
  id="Parceiros"
  class="w-full bg-gray-100 overflow-hidden scrolling-section">
  <div class="container w-full bg-gray-100 pt-24 mx-auto">
    <div class="flex flex-col gap-4 items-center mb-12">
      <div class="w-[32px] h-[32px]">
        <img src="/images/icons/clientes-icon.svg" alt="Coração Laranja" />
      </div>
      <h3 class="text-3xl font-semibold text-azul-escuro font-figtree">
        NOSSOS PARCEIROS
      </h3>
    </div>
  </div>

  <div class="logo-scroller pt-8 pb-24 bg-gray-100">
    <div class="logo-track" id="logoTrack">
      {
        logos.concat(logos, logos).map((client, idx) => (
          <div class="logo-item" key={idx}>
            <img
              src={client.logo}
              alt={`${client.name} logo`}
              class="logo-image"
              draggable="false"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .logo-scroller {
    width: 100vw;
    overflow: hidden;
    position: relative;
  }
  .logo-track {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: max-content;
    will-change: transform;
    gap: 2rem;
    transition: all 0.1s ease;
  }
  .logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 150px;
    height: 110px;
  }
  .logo-image {
    height: 100px;
    width: auto;
    object-fit: contain;
    user-select: none;
    pointer-events: none;
  }
  @media (max-width: 768px) {
    .logo-item {
      min-width: 100px;
    }
    .logo-track {
      gap: 1rem;
    }
  }
  @media (max-width: 480px) {
    .logo-item {
      min-width: 80px;
    }
    .logo-track {
      gap: 0.75rem;
    }
  }
</style>

<script>
  import { animate } from "motion";

  document.addEventListener("DOMContentLoaded", () => {
    const track = document.getElementById("logoTrack");
    if (!track) return;

    let animation = null;

    // Wait for all images to load to get correct width
    const imgs = Array.from(track.querySelectorAll("img"));
    let loaded = 0;
    imgs.forEach((img) => {
      if (img.complete) loaded++;
      else
        img.addEventListener("load", () => {
          loaded++;
          if (loaded === imgs.length) startMotion();
        });
    });
    if (loaded === imgs.length) startMotion();

    function startMotion() {
      const trackWidth = track.scrollWidth / 3; // Divide by 3 since we have 3 sets
      track.style.transform = "translateX(0)";

      function updateAnimation() {
        if (animation) animation.stop();

        animation = animate(
          track,
          {
            transform: [`translateX(0px)`, `translateX(-${trackWidth}px)`],
          },
          {
            duration: 30,
            easing: "linear",
            repeat: Infinity,
            onComplete: () => {
              track.style.transform = "translateX(0)";
              updateAnimation();
            },
          }
        );
      }

      updateAnimation();
    }
  });
</script>
